
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @data_validate = "parsley" }))
{
    <section id="content" class="m-t-lg wrapper-md animated fadeInUp">
        <a class="nav-brand"></a>
        <div class="row m-n">
            <div class="col-md-4 col-md-offset-4 m-t-lg">

                <section class="panel">
                    <header class="panel-heading text-center">
                        Sign in
                    </header>
                    <div class="panel-body">
                        <div class="form-group">
                            <label class="control-label">Username</label>
                            @Html.TextBox("UserName", null, new { @class = "form-control parsley-validated", @placeholder = "Your Username Here", @style = "text-transform:normalcase !important;", @data_required = "true", @tabindex = "1" })
                            @Html.ValidationMessage("UserName")
                        </div>
                        <div class="form-group">
                            <label class="control-label">Password</label>
                            @Html.Password("UserPassword", null, new { @class = "form-control", @data_required = "true", @placeholder = "Your Password Here", @style = "text-transform:normalcase !important;", @tabindex = "2" })
                            @Html.ValidationMessage("UserPassword")
                        </div>
                    </div>
                    <footer class="panel-footer bg-light lter">
                        <input type="submit" class="btn btn-primary" value="Sign In">
                    </footer>
                </section>
            </div>
        </div>
    </section>

}

