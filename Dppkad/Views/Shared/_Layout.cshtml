<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - DPPKAD</title>
    <link href="@Url.Content("~/Content/stylesheets.css")" rel="stylesheet" type="text/css" />
    @*<link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />*@
    @*<link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" type="text/css" />*@

    @RenderSection("Styles", false)

    <script src="@Url.Content("~/Scripts/plugins/jquery/jquery.min.js")"></script>
    <script src="@Url.Content("~/Scripts/plugins/jquery/jquery-ui.min.js")"></script>
    <script src="@Url.Content("~/Scripts/plugins/jquery/jquery-migrate.min.js")"></script>
    <script src="@Url.Content("~/Scripts/plugins/jquery/globalize.js")"></script>
    <script src="@Url.Content("~/Scripts/plugins/bootstrap/bootstrap.min.js")"></script>
    <script src="@Url.Content("~/Scripts/modernizr-2.6.2.js")"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <center><p><h3>@ViewBag.Title</h3></p></center>
            </div>
            @if (!string.IsNullOrEmpty((string)Session["Username"]))
            {
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown ">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
                            Sign Out
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu" role="menu">
                            <li class="dropdown-header"></li>
                            <li class="divider"></li>
                            <li><a href="@Url.Action("LogOff", "Account")">Sign Out</a></li>
                        </ul>
                    </li>
                </ul>
            </div><!-- /.navbar-collapse -->
            }
        </div>
    </div>

    <div class="container">
        @RenderBody()
        @*<hr />
        <footer>
            <center><p>Copyright &copy; Abdi Creative Technology 2016. All rights reserved.</p></center>
        </footer>*@
    </div>
    @RenderSection("Scripts", false)
</body>
</html>